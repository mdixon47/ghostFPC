{{!< default}}
{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
    <section class="content-area bg1">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="innerMargin">
                        <div class="entry-meta">
                            <span class="entry-date">{{date published_at format="MMMM DD, YYYY"}} </span>
                            <span class="by-author">by {{author}}</span>

                        </div>
                        <h3 class="entry-title">{{title}}</h3>
                        <article>
                        <section class="post-content mbslider mbslider-source responsiveVideo">
                            {{content}}
                        </section>
                            </article>

                        <br>
                        <div class="widget wp_widget_tag_cloud" style="display: inline">
                            {{#foreach tags}}
                                    <a href="{{tag}}{{url}}" class="btn btn-default btn-sm" >{{name}}</a>
                            {{/foreach}}
                        </div>
                        <hr>

                       <!-- {{!tags}}-->

                        <div class="table-content">
                            <div class="table-row">
                                <div class="table-cell">
                                    <h1 class="widget-title">Share this story</h1>
                                </div>
                                <div class="table-cell">
                                    <ul class="socialIcons bigIcons type2 pull-right">
                                        <li><a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                               onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" data-toggle="tooltip" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                                               onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" data-toggle="tooltip" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                        <li><a href="https://plus.google.com/share?url={{url absolute="true"}}"
                                               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;" data-toggle="tooltip" title="Google+"><i class="fa fa-google-plus"></i></a></li>
                                        <li><a href="http://pinterest.com/pin/create/button/?url={{url absolute="true"}}&media=http%3A%2F%2Fwoo.pluto.themewoodmen.com%2Fwp-content%2Fuploads%2Fsites%2F4%2F2013%2F06%2F10000599601-02.jpg&description=Mordon%20Crochet%3Cp%3EPellentesque%20habitant%20morbi%20tristique%20senectus%20et%20netus%20et%20malesuada%20fames%20ac%20turpis%20egestas.%20Vestibulum%20tortor%20quam,%20feugiat%20vitae,%20ultricies%20eget,%20tempor%20sit%20amet,%20ante.%20Donec%20eu%20libero%20sit%20amet%20quam%20egestas%20semper.%20Aenean%20ultricies%20mi%20vitae%20est.%20Mauris%20placerat%20eleifend%20leo.%3C/p%3E" data-toggle="tooltip" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
                                        <li><a href="mailto:?body={{url absolute="true"}}&subject={{title}}" data-toggle="tooltip" title="Email"><i class="fa fa-envelope-o"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <br>

                    <div class="media stdbox">
                        <p class="pull-left">
                            <img class="media-object" src="{{author.image}}" id="my_author_image" alt="">
                        </p>
                        {{#author}}
                            <div class="media-body">
                                <h4 class="media-heading"><a href="{{url}}">{{name}}</a></h4>

                            <p>
                                {{#if bio}}
                                    <p>{{bio}}</p>
                                {{else}}
                                    <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                                {{/if}}
                                </p>
                            </div>
                        </div>
                        {{/author}}
                        <br>
                        <hr>
                        <br>
                        <a href="{{page_url next}}"><span class="navigation-blog">‚Üê Main page</span></a>
<br><br>

