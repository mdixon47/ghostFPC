{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
    <article class="blog-item item-bigger isotope-item">
        <div class="blog-thumbnail">
            {{#if image}}
                <img src="{{image}}" alt="{{title}}">
            {{else}}
                <a href="{{url}}" title="{{title}}">{{content words="0"}}</a>
            {{/if}}
        </div>
        <div class="innerMargin">
            <div class="entry-meta">
                <span class="entry-date">{{date published_at format="MMMM DD, YYYY"}} </span>
                <span class="by-author">by {{author}}</span>
            </div>
            <h4 class="entry-title"><a href="{{url}}">{{{title}}}</a></h4>

            <p>
                {{excerpt words="60"}}  {{!okresla liczbe slow wyswietlanych postow bez czytania dalej}}
            </p>
            <br>
            <a href="{{url}}" class="readMore">Continue reading â†’</a>
        </div>
    </article>
{{/foreach}}

